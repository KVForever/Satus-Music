{
  "compileOnSave": true,
  "compilerOptions": {
      "noImplicitAny": false,
      "noEmitOnError": true,
      "removeComments": false,
      "sourceMap": true,
      "module": "ES2022",
      "target": "ES2017",
      "outDir": "wwwroot/js/compiledts",
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "*": [ "node_modules/*" ]
      }
    },
  "include": [
    "scripts/**/*"
  ]
}