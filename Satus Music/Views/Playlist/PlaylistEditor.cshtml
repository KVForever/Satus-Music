@{
    Layout = "~/Views/Shared/Shared_layout.cshtml";
}

@section Scripts {
    <script src="~/js/compiledts/Playlist/playlist.js" type="module"> </script>
}

@section Navigation {
    <header id="playlist-header">
        <nav id="playlist-nav">
            <div id="playlist-nav-container" class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="fs-4 ms-3">Playlist Editor</p>
                </div>
                    
                <div id="links">
                    <a href="/Home/Home" aria-label="View Home page." class="btn btn-lg home-nav-btn">Home</a>
                    <a href="/Map/Map" aria-label="View Map page." class="btn btn-lg map-nav-btn">Map</a>
                </div>
            </div>
        </nav>
    </header>
}

<section>
   
    <div class="row m-0">
        <div class="col-4" id="playlist-populate">
            <div class="d-flex heading">
                <p class="fs-2 ms-2">Your Library</p>
                <button id="library-search"><i class="bi bi-search fs-5"></i></button>
                <input id="library-search-input" placeholder="Search" />
            </div>
            
            <div id="playlists">
              
            </div>
        </div>
        <div class="col-8" id="playlist-view-one">            
            <div id="playlist-background"></div>
            <div id="playlist-view-body">
                <div class="d-flex" id="playlist-heading">
                    <input class="playlist-search" placeholder="Search" />
                    <img src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" id="playlist-image" />
                    <canvas id="playlist-color-canvas" class="d-none"></canvas>
                    <div id="playlist-description">
                        <p id="playlist-title"></p>
                        <p id="about-playlist"></p>
                        <div id="playlist-stats">
                            <p><span id="playlist-owner"></span> <span id="num-tracks"></span> <span id="playlist-duration"></span></p>
                        </div>
                    </div>
                    
                </div>
                <div class="p-3" id="playlist-tracks">
                    <table id="playlist-table" class="table">
                        <thead>
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Album</th>
                                <th scope="col">Date Added</th>
                                <th scope="col">Duration</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Mark</td>
                                <td>Otto</td>
                                <td>mdo</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
           
            
        </div>
    </div>
    <div class="row m-0" id="playlist-view-two">
        <div class="col-12">

        </div>
    </div>
</section>