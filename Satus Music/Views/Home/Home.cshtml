
@{
   Layout = "~/Views/Shared/Shared_layout.cshtml";
}


<div id="home" class="">
    <section id="landing" class="scroll-snap d-flex align-items-center justify-content-center">
        <div id="landing-background">
            <div id="home-gradient" class="d-flex">
                <div class="row position-relative">
                    <div id="greeting-background"></div>
                    <div id="home-greeting" class="text-start align-items-center my-auto ms-5 col">
                        <p class="">Welcome to Satus, <span id="username">null</span></p>
                        <p class="fs-5">From rock to pop, jazz to country, music is for everyone. Its a beautiful expression of who you are. Lets explore what music expresses your one-of-a-kind personality.</p>
                    </div>
                    <div class="my-auto me-3" id="home-image">
                        <canvas id="home-canvas" class="d-flex mx-auto"></canvas>
                        <canvas id="home-color-canvas" class="d-none"></canvas>

                        <div class="fs-1 p-3 col image-description">
                            <p id="top-track-name" class="fs-2 text-center">null</p>
                            <p id="top-track-artist-name" class="fs-2 text-center">null</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="top-track-podium" class="scroll-snap d-flex align-items-center row">
        <h1 class="text-center col-12 mt-5">Your Top Songs</h1>
        <div class="spot-2 d-flex align-items-center">
            <div class="col4 text-center">
                <p class="fs-2">#2</p>
                <canvas id="top-song-two" class="d-flex mx-auto"></canvas>
                <canvas id="top-song-two-color-canvas" class="d-none"></canvas>
                <div class="fs-1 p-3 col track-description">
                    <p id="top-song-two-name" class="fs-2">null</p>
                    <p id="top-song-two-artist-name" class="fs-2">null</p>
                </div>           
            </div>
            <div class="spot-1 col-4 text-center">
                <p class="fs-2">#1</p>
                <canvas id="top-song-one" class="d-flex mx-auto"></canvas>
                <canvas id="top-song-one-color-canvas" class="d-none"></canvas>
                <div class="fs-1 p-3 col track-description">
                    <p id="top-song-one-name" class="fs-2">null</p>
                    <p id="top-song-one-artist-name" class="fs-2">null</p>
                </div>
            </div>
            <div class="spot-3 col-4 text-center">         
                <p class="fs-2">#3</p>
                <canvas id="top-song-three" class="d-flex mx-auto"></canvas>
                <canvas id="top-song-three-color-canvas" class="d-none"></canvas>
                <div class="fs-1 p-3 col track-description">
                    <p id="top-song-three-name" class="fs-2">null</p>
                    <p id="top-song-three-artist-name" class="fs-2">null</p>
                </div>           
            </div>       
        </div>
    </section>

    <section id="top-artist-podium" class="scroll-snap d-flex align-items-center row">
        <h1 class="text-center col-12 mt-5">Your Top Artists</h1>
        <div class="spot-2 d-flex align-items-center">
            <div class="col4 text-center">
                <p class="fs-2">#2</p>
                <canvas id="top-artist-two" class="d-flex mx-auto"></canvas>
                <canvas id="top-artist-two-color-canvas" class="d-none"></canvas>
                <div class="artist-description fs-1 p-3 col">
                    <p id="top-artist-two-name" class="fs-2">null</p>
                </div>
            </div>
            <div class="spot-1 col-4 text-center">
                <p class="fs-2">#1</p>
                <canvas id="top-artist-one" class="d-flex mx-auto"></canvas>
                <canvas id="top-artist-one-color-canvas" class="d-none"></canvas>
                <div class="artist-description fs-1 p-3 col">
                    <p id="top-artist-one-name" class="fs-2">null</p>
                </div>
            </div>
            <div class="spot-3 col-4 text-center">
                <p class="fs-2">#3</p>
                <canvas id="top-artist-three" class="d-flex mx-auto"></canvas>
                <canvas id="top-artist-three-color-canvas" class="d-none"></canvas>
                <div class="artist-description fs-1 p-3 col">
                    <p id="top-artist-three-name" class="fs-2">null</p>
                </div>
            </div>
        </div>
    </section>
</div>
